<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:gravity="top"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="0dp"
                android:gravity="top"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/date_out"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="21dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/et_al_left"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_al"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="0.65"
                        android:background="@null"
                        android:hint="到货地点"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/date_out"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/et_cn_left"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_on"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="0.65"
                        android:background="@null"
                        android:hint="订单号" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/date_out"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/et_on_left"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_cn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="0.65"
                        android:background="@null"
                        android:hint="合同号" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/date_out"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/et_os_left"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/et_os"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.50"
                        android:background="@null"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tab_spinner_right"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/tab_right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="145dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/date_out"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/bt_date1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/et_date_left" />

                        <TextView
                            android:id="@+id/et_ben_date"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:background="@null"
                            android:hint="起始时间"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/bt_date1c"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/tab_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="145dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/date_out"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/bt_date2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/et_date_left" />

                        <TextView
                            android:id="@+id/et_end_date"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:background="@null"
                            android:hint="结束时间"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/bt_date2c"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/tab_right" />
                    </LinearLayout>
                </LinearLayout>

